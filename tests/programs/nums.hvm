// tests numeric parsing and display

@main = x
  // ints
  & x ~ {12345 x}
  & x ~ {0 x}
  & x ~ {0 x}
  & x ~ {-12345 x}
  & x ~ {2748 x}
  & x ~ {-2748 x}
  & x ~ {10 x}
  & x ~ {-10 x}

  // floats
  & x ~ {1.0 x}
  & x ~ {0.1 x}
  & x ~ {0.001 x}
  & x ~ {-123.123 x}
  & x ~ {-1204.5 x}
  & x ~ {+NaN x}
  & x ~ {+NaN x}
  & x ~ {+inf x}
  & x ~ {-inf x}

  & x ~ *
