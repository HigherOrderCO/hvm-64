@half = x & 1.0 ~ $([/2.0] x)
@nan = x & 0.0 ~ $([/0.0] x)

@main = x
  // nan and inf divisions
  & x ~ {n x} & 1.0  ~ $([/0.0] n) // inf
  & x ~ {n x} & -1.0 ~ $([/0.0] n) // -inf
  & x ~ {n x} & 0.0  ~ $([/0.0] n) // NaN

  // general operators
  & x ~ {n x} & @half ~ $([+2.0] n)  // 2.5
  & x ~ {n x} & @half ~ $([-2.0] n)  // -1.5
  & x ~ {n x} & @half ~ $([*2.3] n)  // 1.15
  & x ~ {n x} & @half ~ $([/2.0] n)  // 0.25
  & x ~ {n x} & @half ~ $([%2.0] n)  // 0.5

  // comparisons (returning ints)
  & x ~ {n x} & @half ~ $([=2.0] n) // 0
  & x ~ {n x} & @half ~ $([!2.0] n) // 1
  & x ~ {n x} & @half ~ $([<2.0] n)  // 1
  & x ~ {n x} & @half ~ $([>2.0] n)  // 0

  // ieee nan comparisons
  & x ~ {n x} & @nan ~ $([=] $(@nan n)) // 0
  & x ~ {n x} & @nan ~ $([??] $(@nan n)) // 0
  & x ~ {n x} & @nan ~ $([<] $(@nan n))  // 0
  & x ~ {n x} & @nan ~ $([??] $(@nan n)) // 0
  & x ~ {n x} & @nan ~ $([>] $(@nan n))  // 0

  // parsing
  & x ~ {n x} & +NaN  ~ $([+0.0] n) // NaN
  & x ~ {n x} & +inf  ~ $([+0.0] n) // inf
  & x ~ {n x} & -inf ~ $([+0.0] n) // -inf
  & x ~ {n x} & 1.02 ~ $([+0.0] n) // 1.02

  & x ~ *
